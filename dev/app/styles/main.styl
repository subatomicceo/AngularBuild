.main-menu.navbar.navbar-default
  position fixed
  width 100%
  top 0
  z-index 1000
  margin 0
  border-radius 0
  background-color #fff
  .navbar-brand 
    padding 0
    margin-left 0
  .container-fluid 
    padding 10px 33px
  .navbar-nav
    padding-top 5px
    padding-bottom 5px
    > li
      > a
        padding-top 10px
        padding-bottom 10px;
      &.login
        border solid 1px #cfd1d5
        border-radius 2px
.main-container
  margin-top 72px
  width 100%
  overflow hidden

.left-menu
  .panel-header
    border-bottom 1px solid #e8e9eb
    background-color #fafafb
    h3
      margin 0
      padding 12px 3px
      font-size 20px
      font-weight bold
      line-height 30px
  .panel-body
    padding 0 15px
    .nav.nav-tabs
      border-bottom 0
      > li
        border-top 1px dotted #e8e9eb
        float none
        margin 0
        &:first-child
          border-top 0
        > a
          border 0
          margin 0
          &:hover, &:focus
            border 0
            background-color transparent
        &.active
          a
            background-color transparent
            border 0
            &:hover
              border 0
              background-color transparent
        > ul
          list-style-type none
          padding-left 15px
          > li
            &:before
              content "â€”"
              display inline-block
              padding-right 5px;
              color #4b82c7
            &:last-child
              padding-bottom 15px

.info-header 
  padding 4.5% 0
  background-color #f5f6f7
  border-bottom solid 1px #e2e3e6
  font-weight 300
  line-height 22px
  img
    width 150px
    border-radius 50%
  .info
    h2
      font-size 45px
      color #162136
      font-family "Raleway", Arial, Helvetica, sans-serif
      margin 0 0 4%
    .description
      padding 0
      ul
        margin 0
        padding 0
        list-style-type none
        font-size 14px
        color #162136
        font-weight 700
        i
          padding 0 8px 0 0
          font-size 16px
  
.soc-menu
  border-bottom 1px solid #e7e8ea
  margin-bottom 3%
  background-color #f5f6f7
  .nav.nav-pills
    padding-left 15px
    li
      border-left 1px solid #e7e8ea
      margin 0
      width 16.4%
      text-align center
      font-size 12px
      text-transform uppercase
      font-weight bold
      letter-spacing 1px
      text-transform capitalize
      cursor pointer
      &:last-child
        border-right 1px solid #e7e8ea
      a
        font-size 12px
        letter-spacing 1px
        padding 15px
        border-radius 0
        span
          font-size 20px
          font-weight bold
          color #162136
      &.active a
        background-color #162135 !important
        color #a3a6ae
        &:after
          content ' '
          position absolute
          border solid 10px transparent
          border-top solid 0px transparent
          border-width 10px
          bottom -18px
          left 50%
          margin-left -10px
          border-color #162135 transparent transparent transparent
          z-index 999
        span
          color #fff
// FORM styles
form
  .terms a 
    color #464d5c
    text-decoration none
    text-transform uppercase
    font-size 11px
    line-height 13px
    margin 0 0 -4px
    letter-spacing 1px
    font-weight normal
  .btn
    margin 52px auto
    width 192px
    border-radius 4px
    border 0
    height 43px
    padding 6px 12px
    &.btn-success
      background-color #6dcf86
    &.btn-primary
      background-color #4b82c7
    &:hover
      background-color #000
    &:active
      background-color #888c96
// FORM styles end
// SLIDER STYLES
.slider
  &.no-images
    ul
      min-height 350px
      li
        min-height 350px
  overflow hidden
  ul
    position relative
    padding 0
    margin 0
    list-style none
    overflow hidden
    li
      padding 0
      float left
      position relative
      img
        width 100%
        height auto
      .holder-table
        display table
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        .holder-cell
          display table-cell
          text-align center
          vertical-align middle
          .content
            max-width 510px
            margin auto
            .title
              color #fff
              display block
              margin 0 0 7px
              font 500 40px/48px "Raleway", Arial, Helvetica, sans-serif
  @media screen and (max-width 71px)
    min-height 400px
header.slider-panel
  padding 51px 0 0
  margin -13px 0 80px
  ul
    padding 0
    list-style none
    display inline-block
    li
      position relative
      float left
      margin 0 20px 10px
      &.active
        a
          &:before, &:after
            position absolute
            right 100%
            top -51px
            overflow hidden
            text-indent -9999px
            height 13px
            background #fff
            width 9999px
            content ""
          &:after
            left 100%
            right auto
          span:after
            background url('../img/bg-mask.png') no-repeat 50% 0
            position absolute
            left -300px
            right -300px
            top -51px
            content ""
            height 19px
            overflow hidden
            text-indent -9999px
  @media screen and (max-width 767px)
    ul
      width 100%
      li
        margin 0
        width 50% 
        padding 0 5px
        a
          &.btn.btn-fixed
            width 100%
      &.multiple
        li
          a
            &:before, &:after
              display none
            span:after
              display none
  @media screen and (max-width 480px)
    ul li a
      font-size 15px


// SLIDER styles end
