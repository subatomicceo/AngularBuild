#cmp-inf-analytics
  .panel.panel-default
    b
      color #162136
    .panel-heading
      padding 15px
      color #ccc
      font-size 22px
      background-color transparent
    &.separated
      .panel-heading
        padding 0
        > div
          &:first-child
            padding 15px
          &:last-child
            border-left 1px solid #e7e8ea
            font-size 12px
            color #a3a6ae
            text-align center
            text-transform uppercase
            font-weight bold
            letter-spacing 1px
            line-height 24px
            border-left 1px solid #dddddd
            padding 6px 0
            span
              font-size 20px
              font-weight bold
              color #162136
  .engagement
    color #464d5c
    header
      position relative
      &:after
        background none repeat scroll 0 0 #e7e8ea
        content ""
        height 1px
        position absolute
        bottom 0
        width 227px
        left 20%
        width 60%
    .engagement-info
      .engagement-block
        padding 20px 5% 5px
        color #000
        clear both
        line-height 30px
        text-align left
        span
          display block
          font-weight 600
        i.icon
          display block
          float left
          height 35px
          width 35px
          line-height 35px
          text-align center
          background-color #b8d375
          font-weight 600
          border-radius 50%
          font-size 20px
          margin 10px 7%
          color #fff
          &.icon-comment
            background-color #ef6747
        