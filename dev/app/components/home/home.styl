#home
  .promo-box
    color: #fff
    position relative
    .video-container
      z-index 1
      top 0
      max-height 542px
      overflow hidden
      width 100%
      video
        -webkit-filter: brightness(0.6);
        position relative
        top 0
        width 100%
        height auto
    @media screen and (max-width 767px)
      .video-container
        max-height 727px
        height 727px
        video
          width 1300px
          left  -50%
    .video-overlay
      position absolute
      top 0
      width 100%
      height 100%
      .text-container
        z-index 3
        position relative
        margin-top 7.5%
        h1
          line-height 1.09
          font-family "Helvetica Neue", Helvetica, Arial, sans-serif
          font-weight 100
          margin 0 0 18px
        .btn
          font-size 14px
          padding 10px 40px
          margin-top 50px
          font-weight 100
      @media screen and (max-width 767px)
        .text-container
          margin-top 175px
          h1
            font-size 56px
            font-weight 200
          .btn
            margin-top 50px
            padding 20px 100px
            font-size 22px
            font-weight 300px
      @media screen and (max-width 479px)
        .text-container
          margin-top 185px
          h1
            font-size 45px
            font-weight 400
          .btn
            margin-top 90px
            padding 20px 100px
            font-size 22px
            font-weight 300px
            
      .icon-container
        text-align center
        position absolute
        bottom -42px
        width 100%
        z-index 2
        .icon
          font-size 70px
          background-color #fff
          border-radius 50%
          margin 10px 22px
          display inline-block
          &.icon-InstagramFinal
            color #996440
          &.icon-VineFinal
            color #469277
          &.icon-SnapChatFinal
            color #fbe865
          &.icon-YoutubeFinal
            color #f16c7a
          &.icon-FacebookFinal
            color #f16c7a
          &.icon-TwitterFinal
            color #85d2d2
          &.icon-PinterestFinal
            color #ff3940
      @media screen and (max-width 767px)
        .icon-container
          .container
            padding 0
      @media screen and (max-width 479px)
        .icon-container
          .icon
            font-size 55px
            margin 17px 13px
            
  .brand-carousel
    padding 60px 15px
    max-width 1270px
    margin 0 auto
    .carousel
      overflow hidden
      margin-top 70px;
      .carousel-wrapper
        display block
        text-align start
        float none
        position relative
        top auto
        right auto
        bottom auto
        left auto
        z-index auto
        width 1240px
        height 46px
        margin 0px
        overflow hidden
        ul
          padding 0
          text-align left
          float none
          position absolute
          top 0px
          right auto
          bottom auto
          left 0px
          margin 0px
          width 5580px
          height 46px
          z-index auto
          li
            width 155px
            letter-spacing 0
            line-height 20px
            display inline-block
            vertical-align middle
            margin 0
            padding 0 22px
            text-align center
            img
              vertical-align top
              max-height 46px
              width auto
              max-width 100%
  .how-it-works
    header.slider-panel
        margin-bottom 0
    .tab
      min-height 660px
      background-repeat no-repeat
      background-position 0 100%
    @media screen and (max-width 991px)
      .tab
        background-position -110px 100%
        h1
          text-align center
    @media screen and (max-width 768px)
      .tab
        height 1000px
        position relative
        background-position calc(50% - 50px) 100%
        .text-box
          height 500px
        .button-bar
          position absolute
          bottom -180px
          left 0
          right 0
          margin auto
  .how-it-works, .sign-up
    .tab-set
      ul
        list-style: none;
        display inline-block
        padding 0
        li
          float left
  .sign-up
    h1
      margin 0 0 18px
      font-size 55px
      line-height 1.09
      font-family "Raleway", Arial, Helvetica, sans-serif
      font-weight 300
      color #162136
    .tab-set
      padding 50px 0 60px
      ul li
        margin 0 16px
        @media screen and (max-width 479px)
          float none
          &:last-child
            margin-top 20px
        &.active .btn.btn-fixed
          position relative
          &:before
            content ''
            position absolute
            bottom -8px
            left 50%
            margin 0 0 0 -6px
            width 0
            height 0
            border-style solid
            border-width 7px 7px 0 7px
            border-color #4b82c7 transparent transparent transparent
          &.btn-success:before
            border-color #6dcf86 transparent transparent transparent
  .simple-slider
    background -moz-linear-gradient(top,  rgba(183,183,183,0.23) 0%, rgba(183,183,183,0) 17%, rgba(183,183,183,0) 100%) /* FF3.6+ */
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(183,183,183,0.23)), color-stop(17%,rgba(183,183,183,0)), color-stop(100%,rgba(183,183,183,0))) /* Chrome,Safari4+ */
    background -webkit-linear-gradient(top,  rgba(183,183,183,0.23) 0%,rgba(183,183,183,0) 17%,rgba(183,183,183,0) 100%) /* Chrome10+,Safari5.1+ */
    background -o-linear-gradient(top,  rgba(183,183,183,0.23) 0%,rgba(183,183,183,0) 17%,rgba(183,183,183,0) 100%) /* Opera 11.10+ */
    background -ms-linear-gradient(top,  rgba(183,183,183,0.23) 0%,rgba(183,183,183,0) 17%,rgba(183,183,183,0) 100%) /* IE10+ */
    background linear-gradient(to bottom,  rgba(183,183,183,0.23) 0%,rgba(183,183,183,0) 17%,rgba(183,183,183,0) 100%) /* W3C */

    > ul
      position relative
      list-style none
      margin auto
      padding 0
      height 685px
      > li
        opacity 0
        z-index 1;
        transition opacity 1s ease
        float left
        position absolute
        width: 100%
        height 100%
        top 0
        left 0
        background-repeat no-repeat
        background-size 50%
        background-position 80%
        &.active
          opacity 1
          z-index 10
        .text-box
          width 310px
          padding-top 240px
          height 460px
          position relative
          h2
            color #162136
            font 300 30px/36px "Raleway", Arial, Helvetica, sans-serif
            margin 0 0 25px
          p
            margin-bottom 60px
          .controls-wrap
            margin 0
            padding 0
            position absolute
            bottom 0
            left 0
            
    @media screen and (max-width 991px)
      > ul
        > li
          .text-box
            width 270px;
    @media screen and (max-width 767px)
      > ul
        > li
          background-size 100% auto
          background-position 0 100%
          .text-box
            padding-top 40px
            text-align center
            width 100%
            height 180px
          .controls-wrap
            width 100%
            text-align center
            ul.controls
              display inline-block
  .slider-gallery
    position relative
    width 100%
    height auto
    margin-bottom 90px
    .btn-prev,.btn-next
      position absolute
      left 35px
      top 50%
      overflow hidden
      text-indent -9999px
      background url(../img/sprite.png) no-repeat -67px 0
      width 36px
      height 69px
      margin -51px 0 0
      z-index 5
      cursor pointer
    .btn-next
      left auto
      right 35px
      background-position -27px 0
    > ul
      margin 0
      padding 0
      list-style none
      width 100%
      position relative
      overflow hidden
      
      > li
        float left
        position relative
        overflow hidden
        width 100%
        .text-box
          width 150px
          position absolute
          left 50%
          top 164px
          margin 0 0 0 -70px
          color #fff
          z-index 5
          text-align center
          .controls
            display none
            margin-top 50px
          img
            width 100%
            margin 23px 0 16px 0
          .btn.btn-default
              border-radius 4px
              font-weight bold
              color #fff
              text-decoration none
              padding 14px 5px 13px
              text-transform uppercase
              display block
              margin 0 -8px
              letter-spacing 1px
              border 1px solid #fff
              background none
              &:hover
                border-color #000
                color #000
        @media screen and (max-width 1199px)
          .text-box
            top 80px
        > ul
          list-style none
          position relative
          margin 0
          padding 0
          > li
            width 25%
            float left
            position relative
            .info
              position absolute
              left 0
              bottom 46px
              width 100%
              text-align center
              .num
                font-weight 100
                font-size 45px
                line-height 47px
                color #fff
                display block
                margin 0 0 13px
              .alt-text
                display inline-block
                vertical-align top
                padding 0 30px
                position relative
                color #6dcf86
                font-size 16px
                line-height 20px
                text-transform uppercase
                font-weight bold
                font-family "Lato", Arial, Helvetica, sans-serif
                i
                  font-size 20px
                  display inline-block
                  margin-top -2px
            @media screen and (max-width 991px)
              .info
                bottom 10px
                .num
                  font-size 23px
                  line-height 25px
                .alt-text
                  font-size 13px
            img
              width 100%
              height auto
              vertical-align top
        @media screen and (max-width 767px)
          .text-box
            top 40px
            width 200px
            margin-left -100px
            .controls
              display inline-block
            .btn.btn-default
              display none
          > ul
            padding-top 250px
            background-color rgb(70,77,92)
            > li
              width 50%
